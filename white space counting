class StringOperations{
    public static void main(String[] args) {
        String str = "This is a test string";
        String newStr = "";
        int wordCount = 0;
        int spaceCount = 0;

        for(int i = 0; i < str.length(); i++){
           if(str.charAt(i) != ' '){
              newStr += str.charAt(i);
           } else {
              wordCount++;
              spaceCount++;
           }
        }

        System.out.println(wordCount+1);
        System.out.println(spaceCount);
        System.out.println(newStr);

    }
}
